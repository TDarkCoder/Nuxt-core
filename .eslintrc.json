{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:vue/recommended"
  ],
  "overrides": [
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "vue"
  ],
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "object-curly-spacing": [
      "error",
      "never"
    ],
    "keyword-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ],
    "space-before-function-paren": [
      "error",
      "always"
    ],
    "vue/multi-word-component-names": "off",
    "vue/html-indent": [
      "error",
      "tab",
      {
        "attribute": 1,
        "alignAttributesVertically": true,
        "ignores": []
      }
    ],
    "vue/max-attributes-per-line": [
      "error",
      {
        "singleline": {
          "max": 2
        },
        "multiline": {
          "max": 1
        }
      }
    ],
    "vue/require-default-prop": "off",
    "vue/no-v-model-argument": "off",
    "semi": [
      "error",
      "always"
    ]
  }
}
